@inject IDashboardService DashboardService
@attribute [Authorize]

<MudGrid>
    @if (isBusy)
    {
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        
    }
    else
    {
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.OtherHouses" Color="Color.Primary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Branches</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@ChartData!.TotalBranches</MudText>
                </div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.OtherHouses" Color="Color.Warning" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Shops</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@ChartData!.TotalShops</MudText>
                </div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.PeopleOutline" Color="Color.Secondary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Employees</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@ChartData!.TotalEmployees</MudText>
                </div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.PeopleOutline" Color="Color.Tertiary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Customers</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@ChartData!.TotalCustomers</MudText>
                </div>
            </MudPaper>
        </MudItem>        
    }
</MudGrid>
@code {
    private bool isBusy = false;
    [Parameter] public TopChartData? ChartData { get; set; }
    protected override async Task OnParametersSetAsync()
    {
        isBusy = true;
        await InvokeAsync(StateHasChanged);
        isBusy = false;
    }

}

