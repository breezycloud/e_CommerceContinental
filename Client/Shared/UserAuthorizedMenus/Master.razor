            </div>
            <MudText Typo="Typo.body2">Manage Banks List</MudText>
        </MudListItem>                             
        <MudListItem OnClick="@(() => Nav("branches", "settings"))">
            <div class="d-flex">
                <MudText Color="Color.Primary">Branch</MudText>
            </div>
            <MudText Typo="Typo.body2">Manage Company Branch</MudText>
