    <MudList Clickable="true">
        <MudListSubheader>
            User Permission
        </MudListSubheader>            
        <MudListItem OnClick="@(() => Nav("accesslevels", "settings"))">
            <div class="d-flex">
                <MudText Color="Color.Success">Access</MudText><MudText Color="Color.Secondary">Permission</MudText>
            </div>
            <MudText Typo="Typo.body2">Manage Access Permissions</MudText>
        </MudListItem>            
        <MudListItem OnClick="@(() => Nav("roles", "settings"))">
            <div class="d-flex">
                <MudText Color="Color.Secondary">User</MudText><MudText Color="Color.Dark">Roles</MudText>
            </div>
            <MudText Typo="Typo.body2">Manage System Roles</MudText>
        </MudListItem>            
        <MudListItem OnClick="@(() => Nav("roles", "settings"))">
            <div class="d-flex">
                <MudText Color="Color.Tertiary">User</MudText><MudText Color="Color.Surface">Persmissions</MudText>
            </div>
            <MudText Typo="Typo.body2">Manage User System Permissions</MudText>
        </MudListItem>            
    </MudList>
    <MudList Clickable="true" Class="relative">
        <MudListSubheader>
            Company
        </MudListSubheader>
        <MudListItem OnClick="@(() => Nav("company", "settings"))">                
            <div class="d-flex mr-16">
                <MudText Color="Color.Primary">Company</MudText><MudText Color="Color.Tertiary">Setting</MudText>
            </div>                
            <MudText Typo="Typo.body2">Manage Company Settings</MudText>
        </MudListItem>                   
        <MudListItem OnClick="@(() => Nav("banks", "settings"))">
            <div class="d-flex">
